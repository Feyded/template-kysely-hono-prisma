generator client {
  provider = "prisma-kysely"
  output   = "../src/db"
  fileName = "types.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum UserRoleType {
  SUPER_ADMIN
  ADMIN
  USER
}

model users {
  id          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  first_name  String
  middle_name String?
  last_name   String
  role        UserRoleType @default(USER)
  is_active   Boolean      @default(true)
  email       String       @unique
  password    String
  created_at  DateTime     @default(now()) @db.Timestamptz(6)
  updated_at  DateTime     @default(now()) @db.Timestamptz(6)

  @@index([created_at])
  @@index([updated_at])
  @@index([first_name])
  @@index([last_name])
  @@index([is_active])
  @@index([email])
}

enum OrderPaymentMethod {
  CASH
  GCASH
  PAYMAYA
}

enum OrderStatus {
  PAID
  PENDING
}

model orders {
  id             String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  customer_name  String
  payment_method OrderPaymentMethod @default(CASH)
  status         OrderStatus        @default(PENDING)
  image_path     String?
  amount         Float            
  created_at     DateTime           @default(now()) @db.Timestamptz(6)
  updated_at     DateTime           @default(now()) @db.Timestamptz(6)

  @@index([payment_method])
  @@index([status])
  @@index([created_at])
  @@index([updated_at])
}
