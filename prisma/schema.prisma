generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

enum UserRoleType {
  SUPER_ADMIN
  ADMIN
  USER
}

model users {
  id          String       @id @default(uuid())
  first_name  String
  middle_name String?
  last_name   String
  role        UserRoleType @default(USER)
  is_active   Boolean      @default(true)
  email       String       @unique
  password    String
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt

  @@index([created_at])
  @@index([updated_at])
  @@index([first_name])
  @@index([last_name])
  @@index([is_active])
  @@index([email])
}
