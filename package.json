    "jose": "^6.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "prisma": "^6.18.0",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
